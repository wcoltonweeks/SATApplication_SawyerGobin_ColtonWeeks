@model IEnumerable<SATApplication.DATA.EF.ScheduledClass>

@{
    ViewBag.Title = "Scheduled Classes";
}

@section datatablesCSS{
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Schedule Class", "Create", null, new { @class = "btn btn-default" })
</p>
<br />
<table class="table" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstructorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cours.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledClassStatus.SCSName)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InstructorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cours.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScheduledClassStatus.SCSName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ScheduledClassID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ScheduledClassID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ScheduledClassID })
                </td>
            </tr>

        }
    </tbody>
</table>

@section scripts{
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}
